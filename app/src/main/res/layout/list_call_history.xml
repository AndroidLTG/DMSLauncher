<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:weightSum="5"
    android:background="@android:color/white"
    android:paddingTop="10dp"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgProfilePhoto"
        android:layout_width="0dp"
        android:src="@drawable/noavatar_btn"
        android:background="@null"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:background="@android:color/white"
        android:layout_height="wrap_content" >
        <ImageButton
            android:id="@+id/imgCallSmall"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:src="@drawable/phone_btn"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@null"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/imgSmsSmall"
            android:layout_width="wrap_content"
            android:src="@drawable/sms_btn"
            android:layout_gravity="center_vertical|center_horizontal"
            android:visibility="gone"
            android:background="@null"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/imgMailSmall"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:background="@null"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/gmail_btn"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/layoutInfo"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtName"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="LTG"
                android:gravity="left|center_vertical"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:id="@+id/txtInfo"
                android:background="@android:color/white"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="gọi lúc ABC"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </LinearLayout>
        <View
            android:layout_width="5dp"
            android:layout_height="wrap_content"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgOptionCallMail"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/phone_btn"
            android:background="@null"
            android:layout_height="0dp" />
        <ImageView
            android:id="@+id/imgOptionSmsMail"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/sms_btn"
            android:background="@null"
            android:layout_height="0dp" />
    </LinearLayout>

</LinearLayout>